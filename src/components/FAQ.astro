---
import { faqItems } from "../data/faq";
---

<section class="py-20 px-4 bg-stone-50">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-4xl font-light text-stone-800 text-center mb-16">
      Domande Frequenti
    </h2>
    <div class="space-y-8">
      {
        faqItems.map((item) => (
          <div class="rounded-lg px-6 border-0">
            <h2 class="text-left text-2xl font-semibold text-stone-800 hover:no-underline">
              {item.question}
            </h2>
            <p
              class="text-stone-600 pt-2"
              set:html={item.answerHtml || item.answer}
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
