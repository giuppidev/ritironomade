---
// Waitlist section for digital nomad retreat landing page
import Button from "./ui/Button.astro";
import { ExternalLink, Mail } from "@lucide/astro";
---

<section class="py-20 px-4 bg-primary">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-4xl font-light text-white mb-6">
      Vuoi rimanere aggiornato sulle prossime edizioni?
    </h2>
    <p class="text-xl text-emerald-100 mb-8 leading-relaxed">
      Entra nella community per ricevere aggiornamenti e informazioni sui
      prossimi ritiri nomadi.
    </p>

    <!-- Email signup form -->
    <div class="mb-8">
      <form id="emailForm" class="max-w-md mx-auto">
        <div class="flex flex-col sm:flex-row gap-3">
          <div class="flex-1 relative">
            <Mail
              class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400"
            />
            <input
              type="email"
              id="emailInput"
              name="email"
              placeholder="La tua email"
              required
              class="w-full pl-10 pr-4 py-3 bg-white rounded-full border-0 focus:ring-2 focus:ring-emerald-300 focus:outline-none text-gray-900 placeholder-gray-500"
            />
          </div>
          <button
            type="submit"
            class="bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-3 text-lg rounded-full shadow-lg transition-colors"
          >
            Iscriviti
          </button>
        </div>
      </form>

      <!-- Status messages -->
      <div id="statusMessage" class="mt-4 hidden">
        <p id="successMessage" class="text-emerald-200 text-lg hidden">
          ✅ Grazie! Ti abbiamo aggiunto alla lista d'attesa. Ti invieremo
          presto aggiornamenti!
        </p>
        <p id="errorMessage" class="text-red-200 text-lg hidden">
          ❌ Si è verificato un errore. Riprova più tardi.
        </p>
      </div>
    </div>
  </div>
</section>

<script>
  // Email form handling
  const emailForm = document.getElementById("emailForm") as HTMLFormElement;
  const emailInput = document.getElementById("emailInput") as HTMLInputElement;
  const statusMessage = document.getElementById(
    "statusMessage"
  ) as HTMLDivElement;
  const successMessage = document.getElementById(
    "successMessage"
  ) as HTMLParagraphElement;
  const errorMessage = document.getElementById(
    "errorMessage"
  ) as HTMLParagraphElement;

  if (emailForm) {
    emailForm.addEventListener("submit", async (e) => {
      e.preventDefault();

      const email = emailInput.value.trim();
      if (!email) return;

      // Show loading state
      const submitButton = emailForm.querySelector(
        'button[type="submit"]'
      ) as HTMLButtonElement;
      const originalText = submitButton.textContent;
      submitButton.textContent = "Invio...";
      submitButton.disabled = true;

      try {
        const response = await fetch(
          "https://www.giuppi.dev/api/ritiro-nomade",
          {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ email }),
          }
        );

        if (response.ok) {
          // Show success message
          statusMessage.classList.remove("hidden");
          successMessage.classList.remove("hidden");
          errorMessage.classList.add("hidden");
          emailInput.value = "";
        } else {
          throw new Error("API request failed");
        }
      } catch (error) {
        // Show error message
        statusMessage.classList.remove("hidden");
        errorMessage.classList.remove("hidden");
        successMessage.classList.add("hidden");
      } finally {
        // Reset button state
        submitButton.textContent = originalText;
        submitButton.disabled = false;
      }
    });
  }
</script>
