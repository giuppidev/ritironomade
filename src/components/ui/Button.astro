---
interface Props {
  size?: "sm" | "md" | "lg";
  class?: string;
}

const { size = "md", class: className = "" } = Astro.props;

const sizeClasses = {
  sm: "px-3 py-1.5 text-sm",
  md: "px-4 py-2 text-base",
  lg: "px-6 py-3 text-lg",
};
---

<button class:list={[sizeClasses[size], className]}>
  <slot />
</button>
